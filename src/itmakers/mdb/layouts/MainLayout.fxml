<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTabPane?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<?import com.jfoenix.controls.JFXDialog?>
<?import com.jfoenix.controls.JFXDialogLayout?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<StackPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.72"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="itmakers.mdb.MainController">
   <BorderPane>
      <top>
         <AnchorPane fx:id="topBar" prefHeight="30.0" style="-fx-background-color: #2196F3;"
                     BorderPane.alignment="CENTER">
            <JFXButton onAction="#showOptions" ripplerFill="white" AnchorPane.bottomAnchor="5.0"
                       AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0">
               <padding>
                  <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0"/>
               </padding>
               <graphic>
                  <MaterialDesignIconView fill="#ffffff" glyphName="MENU" size="20"/>
               </graphic>
            </JFXButton>
            <Label layoutX="30.0" layoutY="3" text="ITMakers Movie Database" textFill="#ffffff"
                   AnchorPane.leftAnchor="30.0">
               <font>
                  <Font name="Roboto Light" size="20.0"/>
               </font>
            </Label>
            <JFXButton layoutX="573.0" layoutY="14.0" onAction="#close" ripplerFill="white"
                       AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
               <padding>
                  <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0"/>
               </padding>
               <graphic>
                  <MaterialDesignIconView fill="#ffffff" glyphName="WINDOW_CLOSE" size="20"/>
               </graphic>
            </JFXButton>
            <JFXButton layoutX="587.0" layoutY="15.0" onAction="#resize" ripplerFill="white"
                       AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="35.0" AnchorPane.topAnchor="5.0">
               <padding>
                  <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0"/>
               </padding>
               <graphic>
                  <MaterialDesignIconView fx:id="sizeControlIcon" fill="#ffffff" glyphName="WINDOW_MAXIMIZE"
                                          size="20"/>
               </graphic>
            </JFXButton>
            <JFXButton layoutX="567.0" layoutY="15.0" onAction="#iconify" ripplerFill="white"
                       AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="65.0" AnchorPane.topAnchor="5.0">
               <padding>
                  <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0"/>
               </padding>
               <graphic>
                  <MaterialDesignIconView fill="#ffffff" glyphName="WINDOW_MINIMIZE" size="20" strokeMiterLimit="5.0"
                                          strokeWidth="0.5"/>
               </graphic>
            </JFXButton>
         </AnchorPane>
      </top>
      <center>
         <JFXTabPane fx:id="tabPane" rotateGraphic="true" side="LEFT" stylesheets="@../style.css"
                     tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <Tab fx:id="moviesTab" closable="false" text="Movies">
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                  <ScrollPane fx:id="moviesScrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER"
                              pannable="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
               </AnchorPane>
            </Tab>
            <Tab fx:id="showTab" closable="false" text="TV Shows">
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                  <ScrollPane fx:id="tvShowsScrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER"
                              pannable="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
               </AnchorPane>
            </Tab>
         </JFXTabPane>
      </center>
   </BorderPane>

   <JFXDialog fx:id="settingsDialog">
      <JFXDialogLayout fx:id="dialogLayout">
         <VBox>
            <HBox>
            </HBox>
         </VBox>
      </JFXDialogLayout>
   </JFXDialog>
</StackPane>
